@let(isActive = activeTab === tabKey)

<a
  href="{{ url }}"
  up-follow
  up-target="{{ target }}"
  class="flex-1 flex flex-col items-center justify-center lg:hover:bg-neutral-800/50 transition relative group"
>
  <span
    class="{{ isActive ? 'font-bold text-white' : 'font-medium text-neutral-500' }} text-sm transition"
  >
    {{ label }}
  </span>

  @if(isActive)
    <div class="absolute bottom-0 {{ indicatorWidth || 'w-12' }} h-1 bg-blue-500 rounded-full">
    </div>
  @end
</a>
