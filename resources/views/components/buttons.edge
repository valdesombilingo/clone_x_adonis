{{-- Bouton social (Google, Apple, etc.) --}}
@if(type === 'social')
  <button type="{{ type_name || 'submit' }}" class="btn-social-auth">
    <img src="{{ img }}" class="icon-social-auth" />
    <span>{{ label }}</span>
  </button>

  {{-- Bouton primaire (Cr√©er un compte, etc.) --}}
@elseif(type === 'primary')
  <a href="{{ route('register') }}" class="primary-btn">
    {{ label }}
  </a>

  {{-- Bouton secondaire (Se connecter, etc.) --}}
@elseif(type === 'secondary')
  <a href="{{ route('login') }}" class="secondary-btn">
    {{ label }}
  </a>

  {{-- Bouton secondaire  noir --}}
@elseif(type === 'black')
  <button type="{{ type_name || 'submit' }}" class="black-btn">
    {{ label }}
  </button>
@endif
