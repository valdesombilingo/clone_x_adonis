<form
  action="{{ route('destroy_tweet', { id: tweet.id }) }}?_method=DELETE"
  method="POST"
  onclick=event.stopPropagation
  onsubmit="return confirm('Supprimer ce tweet ?')"
  class="ml-auto"
>
  {{ csrfField() }}
  <button type="submit">
    <i class="fa-regular fa-trash-can delete-icon"></i>
  </button>
</form>
